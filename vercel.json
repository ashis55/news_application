{
  "build": {
    "env": {
      "NEWS_API_KEY": "@news_api_key"  // Using Vercel environment variable reference
    }
  },
  "functions": {
    "api/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
